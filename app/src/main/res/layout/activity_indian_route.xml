<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.example.udeys.theindianroute.TheIndianRoute.IndianRoute">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/back_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8">


        <fragment
            android:id="@+id/indian_route_fragment"
            android:name="com.example.udeys.theindianroute.fragments.EmptyFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/frag1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ccc"
            android:src="@drawable/ic_action_important" />

        <ImageButton
            android:id="@+id/frag2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ccc"
            android:src="@drawable/ic_action_split" />

        <ImageButton
            android:id="@+id/frag3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ccc"
            android:src="@drawable/ic_action_favorite" />


    </LinearLayout>

</LinearLayout>
